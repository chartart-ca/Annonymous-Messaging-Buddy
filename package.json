{
  "name": "anonymous-message-hub",
  "version": "1.0.0",
  "description": "A web application for sending and receiving anonymous messages with SQLite backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "mkdir -p public && cp index.html public/"
  },
  "dependencies": {
    "express": "^4.17.1",
    "sqlite3": "^5.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT",
  "config": {
    "port": "env.PORT || 3000",
    "db_path": "env.DB_PATH || 'database.db'"
  }
}
